@namespace Sitko.Core.Blazor.MudBlazorComponents
@inherits BaseMudLayout
<MudThemeProvider Theme="Theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
#if NET6_0_OR_GREATER
<PageTitle>@PageTitle</PageTitle>
<MudLayout>
    <MudAppBar Fixed="true" Elevation="1">
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudIcon Icon="@Logo" Size="Size.Large"/>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(_ => DrawerToggle())"/>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudText Typo="Typo.h6" Class="ml-4">@Application.Name</MudText>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
            <MudText Typo="Typo.subtitle2">@Application.Name</MudText>
        </MudHidden>
        <MudSpacer/>
    </MudAppBar>
    @if (Menu is not null)
    {
        <MudDrawer @bind-Open="DrawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1">
            @Menu
        </MudDrawer>
    }
    <MudMainContent>
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudToolBar DisableGutters="true">
                <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@(_ => DrawerToggle())" Class="ml-3"/>
                <MudBreadcrumbs Items="Breadcrumbs"></MudBreadcrumbs>
                @if (Extra is not null)
                {
                    <MudSpacer/>
                    @Extra
                }
            </MudToolBar>
        </MudHidden>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4 pb-10">
            @if (!string.IsNullOrEmpty(Title))
            {
                <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">@Title</MudText>
            }
            @ChildContent
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {

    [Parameter]
    public string Logo { get; set; } = "";

#if NET6_0_OR_GREATER
    [EditorRequired]
#endif
    [Parameter]
    public RenderFragment? Menu { get; set; }

}
