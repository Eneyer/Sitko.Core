@typeparam TEntity
@typeparam TEntityPk
@typeparam TRepository
@inherits Sitko.Core.App.Blazor.Forms.BaseRepositoryForm<TEntity, TEntityPk, TRepository>

<Form ValidateOnChange="ValidateOnChange" Model="Entity" Loading="IsLoading"
      OnFinish="SaveEntityAsync" @ref="AntForm" OnFinishFailed="OnFormErrorAsync"
      Layout="@Layout" Name="@Name" Size="@Size" LabelCol="@LabelCol" LabelAlign="@LabelAlign"
      LabelColSpan="@LabelColSpan" LabelColOffset="@LabelColOffset" WrapperCol="@WrapperCol"
      WrapperColSpan="@WrapperColSpan" WrapperColOffset="@WrapperColOffset">
    <Validator>
        <Sitko.Core.Blazor.FluentValidation.FluentValidator/>
        <Sitko.Core.App.Blazor.Forms.FormEditContextCatcher Form="this"/>
    </Validator>
    <ChildContent>
        @ChildContentFragment
        @if (Debug)
        {
            <AntFormDebug TEntity="TEntity" Form="this"></AntFormDebug>
        }
    </ChildContent>
</Form>
