@inherits BastAntStorageFileInputComponent<Sitko.Core.Storage.StorageItem>
<div class="ant-upload ant-upload-select ant-upload-select-@(ListType)">
    <span tabindex="0" class="ant-upload" @ref="Btn" role="button">
        <input type="file" style="display: none;" accept="@ContentTypes" @ref="InputRef"/>
        @if (ChildContent is null)
        {
            <div class="ant-upload ant-upload-select">
                <span class="ant-upload">
                    <AntDesign.Button Disabled="IsLoading" Loading="IsLoading" Icon="@(IsLoading ? "Loading" : "upload")">
                        <span>@ButtonText</span>
                    </AntDesign.Button>
                </span>
            </div>
        }
        else
        {
            @ChildContent
        }
    </span>
</div>
