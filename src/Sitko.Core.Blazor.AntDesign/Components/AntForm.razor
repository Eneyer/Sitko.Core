@typeparam TEntity
@typeparam TForm
@inherits BaseAntForm<TEntity, TForm>

@if (IsInitialized)
{
    <AntDesign.Form ValidateOnChange="ValidateOnChange" Model="Form" Loading="Form.IsLoading"
                    OnFinish="Form.SaveEntityAsync" @ref="AntForm" OnFinishFailed="OnFormErrorAsync">
        <Validator>
            <Sitko.Core.Blazor.FluentValidation.FluentValidator/>
            <Sitko.Core.App.Blazor.Forms.ChangesDetector Form="this"/>
        </Validator>
        <ChildContent>
            @ChildContent(Form)
        </ChildContent>
    </AntDesign.Form>
}
